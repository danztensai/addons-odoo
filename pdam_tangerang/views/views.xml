          <field name="model">pdam_tangerang.pdam_tangerang</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="value"/>
              <field name="value2"/>
            </tree>
          </field>
        </record>
        -->
        <record model="ir.ui.view" id="pdam_tangerang.spko">
            <field name="name">Surat Perintah Kerja Opname SPKO</field>
            <field name="model">pdam_tangerang.spko</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="wilayah_id"/>
                    <field name="employee_id"/>
                    <field name="customer_id"/>
                    <field name="registration_number"/>
                    <field name="spko_detail"/>
                    <field name="installation_address"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="spko_form_view">
            <field name="name">spko.form</field>
            <field name="model">pdam_tangerang.spko</field>
            <field name="arch" type="xml">
                <form string="SPKO Form">
                    <sheet>
                        <group>
                            <field name="wilayah_id"/>
                            <field name="employee_id"/>
                            <field name="customer_id"/>
                            <field name="registration_number"/>
                            <field name="spko_detail"/>
                            <field name="installation_address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--View Upload Survey-->

        <record model="ir.ui.view" id="pdam_tangerang.survey">
            <field name="name">Survey</field>
            <field name="model">pdam_tangerang.survey</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="wilayah_id"/>
                    <field name="employee_id"/>
                    <field name="customer_id"/>
                    <field name="registration_number"/>
                    <field name="resident_count"/>
                    <field name="pipe_length"/>
                    <field name="pipe_diameter"/>
                    <field name="lb_survey"/>
                    <field name="state"/>
                    <field name="fee_group"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="survey_form_view">
            <field name="name">survey.form</field>
            <field name="model">pdam_tangerang.survey</field>
            <field name="arch" type="xml">
                <form string="Survey Form">
                    <header>

                        <button name="action_done" class="oe_highlight" type="object" string="Verifikasi" states="survey"
                        help="Pastikan Semua data benar Sebelum Melakukan Verifikasi"/>
                        <button name="action_survey" type="object" string="Survey" states="verified"
                        help="Untuk Mengembalikan Status ke Survey"/>
                        <button name="action_denied" type="object" string="Tolak" states="verified,survey"
                        help="Untuk Menolak Survey"/>
                        <field name="state" widget="statusbar" nolabel="1"/>

                    </header>
                    <sheet>
                        <group>
                            <field name="wilayah_id"/>
                            <field name="employee_id"/>
                            <field name="customer_id"/>
                            <field name="registration_number"/>
                            <field name="resident_count"/>
                            <field name="house_image" widget="image"/>
                        </group>
                        <group>
                            <field name="pipe_length"/>
                            <field name="pipe_diameter"/>
                            <field name="lb_survey"/>
                            <field name="fee_group"/>
                            <field name="state"/>

                        </group>


                    </sheet>
                </form>
            </field>
        </record>



        <!--View Wilayah SPKO-->

        <record model="ir.ui.view" id="pdam_tangerang.wilayah">
            <field name="name">Wilayah SPKO</field>
            <field name="model">pdam_tangerang.wilayah</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wilayah_form_view">
            <field name="name">wilayah.form</field>
            <field name="model">pdam_tangerang.wilayah</field>
            <field name="arch" type="xml">
                <form string="Wilayah Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->


        <record model="ir.actions.act_window" id="pdam_tangerang.action_window">
            <field name="name">Pelanggan</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="pdam_tangerang.action_window_spko">
            <field name="name">Surat Perinta Kerja Opname(SPKO)</field>
            <field name="res_model">pdam_tangerang.spko</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="pdam_tangerang.action_window_wilayah">
            <field name="name">Wilayah SPKO</field>
            <field name="res_model">pdam_tangerang.wilayah</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
         <record model="ir.actions.act_window" id="pdam_tangerang.action_window_survey">
            <field name="name">Survey Pelanggan</field>
            <field name="res_model">pdam_tangerang.survey</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!--UNTUK KANBAN VIEW-->
        <record model="ir.ui.view" id="spko_kanban_view">
            <field name="name">spko.kanban</field>
            <field name="model">pdam_tangerang.spko</field>
            <field name="arch" type="xml">
                <kanban default_group_by="wilayah_id" group_create="false" class="oe_background_grey o_kanban_dashboard o_salon_kanban">
                    <field name="wilayah_id"/>
                    <field name="employee_id"/>
                    <field name="customer_id"/>
                    <field name="registration_number"/>
                    <field name="spko_detail"/>
                    <field name="installation_address"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-md-6">
                                        Nama Pegawai
                                    </div>
                                    <div class="col-md-6">
                                        <field name="employee_id"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>No Pendaftaran :</h3>
                                    </div>
                                    <div class="col-md-6">
                                        <h3>
                                            <field name="registration_number"/>
                                        </h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">

                                        Nama Pelanggan

                                    </div>
                                    <div class="col-md-6">

                                        <field name="customer_id"/>

                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--Kanban View Survey-->
        <record model="ir.ui.view" id="survey_kanban_view">
		<field name="name">pdam_tangerang.survey.kanban</field>
		<field name="model">pdam_tangerang.survey</field>
		<field name="arch" type="xml">
			<kanban default_group_by="employee_id" group_create="false" quick_create="true">
				<field name="color"/>
                <field name="wilayah_id"/>
                <field name="employee_id"/>
                <field name="survey_date"/>
                <field name="customer_id"/>
                <field name="registration_number"/>
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}} oe_kanban_global_click_edit oe_semantic_html_override oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">

							<div class="o_dropdown_kanban dropdown">
								<!-- MENU DROPDOWN -->
								<a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                	<span class="fa fa-bars fa-lg"/>
                            	</a>
                            	<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
									<li>
										<a type="delete">Hapus</a>
									</li>
									<li>
										<ul class="oe_kanban_colorpicker" data-field="color"/>
									</li>
								</ul>
							</div>

							<div t-attf-class="oe_kanban_content" >
								<!-- JUDUL -->
								Wilayah   : <b><i><field name="wilayah_id"/></i></b><br/>
								Tanggal   : <field name="survey_date"/><br/>
								Pelanggan : <field name="customer_id"/><br/>
                                Petugas   : <field name="employee_id"/>
							</div>

						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

        <!--UNTUK MENAMBAHKAN CUSTOM FIELD DI MODEL RES.PARTNER (CUSTOMER) ODOO-->
        <record id="form_customer_pdam" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="registration_number"/>
                    <field name="ktp_no"/>
                    <field name="npwp_no"/>
                    <field name="spl_date"/>
                    <field name="kk_image" widget="image"/>
                    <field name="kk_image" widget="image"/>
                </field>

                <xpath expr="//form[1]//sheet[1]" position="before">
                     <header>
		                <button string="Validating" type="object" name="concept_progressbar" attrs="{'invisible': [('state', '=', 'concept')]}"/>

                        <button string="Survey" type="object" name="started_progressbar" class="oe_highlight" attrs="{'invisible': [('state','!=','concept')]}"/>
                        <button string="Tolak" type="object" name="progress_progressbar" attrs="{'invisible': [('state','=','progress')]}"/>
                        <button string="Approve" type="object" name="done_progressbar" attrs="{'invisible': [('state','=','finished')]}"/>

                            <field name="state" widget="statusbar"/>
		            </header>
		        </xpath>



            </field>
        </record>

        <record id="seq_ref_customer_number_registration" model="ir.sequence">
            <field name="name">ref_customer_number_registration</field>
            <field name="code">res.partner</field>
            <field name="padding">6</field>
        </record>


        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="pdam_tangerang.action_server">
          <field name="name">pdam_tangerang server</field>
          <field name="model_id" ref="model_pdam_tangerang_pdam_tangerang"/>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
        -->


        <!--UNTUK MENU DISIMPAN DISINI SUPAYA RAPIH!!!!!!-->

        <!-- Top menu item -->
        <menuitem name="PDAM Tanggerang" id="pdam_tangerang.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Pendaftaran Pelanggan" id="pdam_tangerang.menu_1" parent="pdam_tangerang.menu_root"/>
        <menuitem name="Meter Reading Desktop" id="pdam_tangerang.menu_2" parent="pdam_tangerang.menu_root"/>
        <menuitem name="Konfigurasi" id="pdam_tangerang.configuration_menu" parent="pdam_tangerang.menu_root"/>

        <!-- actions -->

        <menuitem name="Daftar Pelanggan" id="pdam_tangerang.menu_1_list" parent="pdam_tangerang.menu_1"
                  action="pdam_tangerang.action_window"/>
        <menuitem name="SPKO" id="pdam_tangerang.menu_spko_list" parent="pdam_tangerang.menu_1"
                  action="pdam_tangerang.action_window_spko"/>
        <menuitem name="Survey" id="pdam_tangerang.menu_survey_list" parent="pdam_tangerang.menu_1"
                  action="pdam_tangerang.action_window_survey"/>
        <menuitem name="Wilayah" id="pdam_tangerang.menu_wilayah_list" parent="pdam_tangerang.configuration_menu"
                  action="pdam_tangerang.action_window_wilayah"/>
        <!--<menuitem name="Server to list" id="pdam_tangerang" parent="pdam_tangerang.menu_2"-->
        <!--action="pdam_tangerang.action_server"/>-->

    </data>
</odoo>